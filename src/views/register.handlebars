<div class="container-fluid">
	<div class="row">
		<div class="col g-0">
			<div class="bg-image">
				<div class="contenedorTituloPrincipal-register">
					<a href="/"><img src="/images/logo.png" class="logo" alt="logo" /></a>
					<form action="/api/sessions/register" method="post"
						style="width: 300px; padding: 10px; background: #ee82ee8c; border-radius: 10px; color: white; height: 100%;">
						<div class="text-center text-white"style="display: flex;justify-content: center;align-items: center;">
							<p style="margin-bottom: 0px;">Register with</p>
							<button type="button" class="btn btn-link btn-floating mx-1">
								<a href="/api/sessions/github"><i class="bi bi-github"style="color: white;font-size: 20px;"></i></a>
							</button>
						</div>
						<div class="mb-4">
							<div class="input-group mt-2">
								<span class="input-group-text" id="basic-addon6">
									<i class="bi bi-person-vcard"></i>
								</span>
								<input type="text" class="form-control" id="inputFirstNameRegister" name="firstName"
									placeholder="Firstname" aria-describedby="basic-addon6" />
							</div>

							<div class="input-group mt-2">
								<span class="input-group-text" id="basic-addon5">
									<i class="bi bi-person-vcard-fill" style="width:16px; height: 16px;"></i>
								</span>
								<input type="text" class="form-control" id="inputLastnameRegister" name="lastName"
									placeholder="Lastname" aria-describedby="basic-addon5" />
							</div>

							<div class="input-group mt-2">
								<span class="input-group-text" id="basic-addon4">
									<i class="bi bi-calendar-date-fill" style="width:16px; height: 16px;"></i>
								</span>
								<input type="number" class="form-control" id="inputAgeRegister" name="age"
									placeholder="Age" aria-describedby="basic-addon4" />
							</div>

							<div class="input-group mt-2">
								<span class="input-group-text" id="basic-addon3">
									<i class="bi bi-envelope-at" style="width:16px; height: 16px;"></i>
								</span>
								<input type="email" class="form-control" id="inputEmailRegister" name="email"
									placeholder="Email" aria-describedby="basic-addon3" />
							</div>

							<div class="input-group mt-2">
								<span class="input-group-text" id="basic-addon2">
									<i class="bi bi-eye-slash" style="width:16px; height: 16px;"></i>
								</span>
								<input type="password" class="form-control" id="inputPasswordRegister" name="password"
									placeholder="Password" aria-describedby="basic-addon2" />
							</div>
						</div>
						<div class="w-100 mt-4 d-flex justify-content-center align-items-center flex-column text-white">
							<button type="submit" class="btn btn-primary btn-block mb-4 w-100">
								Register
							</button>
							<div class="w-100 d-flex justify-content-between align-items-center flex-column gap-3">
								<div class="form-check w-100 d-flex justify-content-center align-items-center">
									<input class="form-check-input me-2" type="checkbox" value="" id="loginCheck"
										checked />
									<label class="form-check-label" for="loginCheck">Remember me</label>
								</div>
								<div class="row w-100 text-center">
									<a href="/recovery">Forgot password?</a>
								</div>
								<div class="row">
									<p>Are you already a member?
										<a href="/api/sessions/login">Login</a>
									</p>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>